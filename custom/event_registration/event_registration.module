
<?php

/**
 * Implements hook_mail().
 */
function event_registration_mail($key, &$message, $params) {
  $language_code = $message['langcode'];

  switch ($key) {
    case 'registration_confirmation':
      $message['subject'] = $params['subject'];
      $message['body'] = $params['message']; // Using 'message' key as set in MailService
      break;

    case 'admin_notification':
      $message['subject'] = $params['subject'];
      $message['body'] = $params['body']; // Using 'body' key as set in MailService
      break;
  }
}


